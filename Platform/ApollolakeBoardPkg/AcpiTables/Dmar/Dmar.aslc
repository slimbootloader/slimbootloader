    0x00,

    //
    // It is expected that these values will be programmed at runtime
    //
    {'I', 'N', 'T', 'E', 'L', ' '},
    EFI_ACPI_DMAR_OEM_TABLE_ID,
    0x1,
    EFI_ACPI_DMAR_OEM_CREATOR_ID,
